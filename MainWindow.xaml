<Window x:Class="Jotnal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Журнал смен СРПК - Jotnal" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель пользователя -->
        <Border Grid.Row="0" Background="#2196F3" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="UserNameText"
                               Text="Пользователь не авторизован"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="UserRoleText"
                               Text=""
                               Foreground="White"
                               FontSize="12"/>
                </StackPanel>

                <Button Grid.Column="1"
                        x:Name="SwitchUserButton"
                        Content="Сменить пользователя"
                        Click="SwitchUserButton_Click"
                        Padding="10,5"
                        Margin="5,0,0,0"/>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Добро пожаловать в систему журнала смен!"
                       FontSize="18"
                       Margin="0,0,0,10"/>

            <TabControl Grid.Row="1" x:Name="MainTabControl">
                <TabItem Header="Главная">
                    <StackPanel Margin="10">
                        <TextBlock Text="Система управления сменами готова к работе."
                                   FontSize="14"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Сотрудники" x:Name="EmployeesTab">
                    <StackPanel Margin="10">
                        <TextBlock Text="Управление сотрудниками" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="Здесь будет список сотрудников" Margin="0,10,0,0"/>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Администрирование" x:Name="AdminTab">
                    <StackPanel Margin="10">
                        <TextBlock Text="Административные функции" FontSize="16" FontWeight="Bold"/>
                        <Button Content="Запросы на регистрацию"
                                Click="RegistrationRequestsButton_Click"
                                Padding="10,5"
                                Margin="0,10,0,0"
                                Width="200"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Статусная строка -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
